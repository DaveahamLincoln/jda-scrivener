<h1>Listing alerts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>From</th>
      <th>Subject</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.id%></td>
        <td><%= alert.from %></td>
        <td><%= alert.subject %></td>
        <td><%= link_to 'Show', alert %></td>
      </tr>
    <% end %>
  </tbody>
</table>

